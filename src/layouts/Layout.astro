---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { ClientRouter } from 'astro:transitions';
import '../styles/globals.css';

interface Props {
	title?: string;
}

const { title = "Inmuebles" } = Astro.props;
const { pathname } = Astro.url;
const lang = pathname.startsWith('/en') ? 'en' : 'es';
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Alquileres compartidos</title>

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="/">
		
		<meta name="description" content="Alquileres de pisos e inmuebles en Madrid" />


		<meta property="og:title" content="Alquileres compartidos"/>
		<meta property="og:description" content="Alquileres de pisos e inmuebles en Madrid">
		<meta property="og:image" content="/favicon.svg">
		<meta property="og:url" content="https://inmuebles-compartidos.vercel.app/" />
		<meta property="og:type" content="website"/>
		<meta property="og:locale" content="es_ES" />

		<meta name="twitter:card" content="summary_large_image"/>
		<meta name="twitter:site" content="@Pablo_WebDev__"/>
		<meta name="twitter:site" content="@Pablo_WebDev__"/>
		<meta name="twitter:title" content="Alquileres compartidos"/>
		<meta name="twitter:description" content="Alquileres de pisos e inmuebles en Madrid">


		<ClientRouter />
	</head>
	<body>
		<Navbar />
		<main class="content">
			<slot />
		</main>
		<Footer lang={lang} />
		<style is:global>
			:root {
				--accent: 136, 58, 234;
				--accent-light: 224, 204, 250;
				--accent-dark: 49, 10, 101;
				--accent-gradient: linear-gradient(
					45deg,
					rgb(var(--accent)),
					rgb(var(--accent-light)) 30%,
					white 60%
				);
			}
			html {
				font-family: system-ui, sans-serif;
				background: #f6f6f6;
				background-size: 224px;
				margin: 0;
				padding: 0;
			}
			body {
				margin: 0;
				padding: 0;
				min-height: 100vh;
			}
			.content {
				padding-top: 80px; /* Espacio para el navbar fijo */
			}
			code {
				font-family:
					Menlo,
					Monaco,
					Lucida Console,
					Liberation Mono,
					DejaVu Sans Mono,
					Bitstream Vera Sans Mono,
					Courier New,
					monospace;
			}
		</style>
	</body>
</html>
