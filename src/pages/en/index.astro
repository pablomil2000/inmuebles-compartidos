---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const basePath = lang === 'en' ? '/en' : '';
---

<Layout title={t.welcome.title}>
	<main>
		<h1>{t.welcome.title}</h1>
		<p>{t.welcome.description}</p>
		<nav class="welcome-nav">
			<a href={`${basePath}/properties`} class="nav-link">
				{t.nav.properties}
			</a>
			<a href={`${basePath}/contact`} class="nav-link">
				{t.nav.contact}
			</a>
		</nav>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: black;
		font-size: 20px;
		line-height: 1.6;
		text-align: center;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.welcome-nav {
		display: flex;
		justify-content: center;
		gap: 2rem;
		margin-top: 2rem;
	}
	.nav-link {
		color: black;
		text-decoration: none;
		padding: 0.5rem 1rem;
		border: 2px solid white;
		border-radius: 4px;
		transition: all 0.3s ease;
	}
	.nav-link:hover {
		background: white;
		color: rgb(var(--accent));
	}
</style>