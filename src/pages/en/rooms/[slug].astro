                <li>
                  <span class="feature-icon">üì°</span>
                  WiFi
                </li>
              )}
              {room.data.features.airConditioning && (
                <li>
                  <span class="feature-icon">‚ùÑÔ∏è</span>
                  Aire acondicionado
